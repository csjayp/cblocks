FROM base:14.3 AS go_builder
  ADD . .
  ENV ASSUME_ALWAYS_YES = "YES"
  RUN "pkg update"
  RUN "pkg install go125"
  WORKDIR /fcgi
  ENV PATH = "$PATH:/usr/local/go125/bin"
  RUN "go mod init local/fcgi"
  RUN "go mod tidy"
  RUN "go build"
  RUN "size fcgi"

FROM base:14.3
  ADD . .
  ENV ASSUME_ALWAYS_YES = "YES"
  RUN "pkg install h2o"
  COPY --FROM go_builder /fcgi/fcgi /usr/local/bin
  RUN "mkdir /tls"
  ADD server.crt /tls
  ADD server.key /tls

AUDITCFG "ex,pc"

ENTRYPOINT [ "/usr/local/bin/h2o", "-c", "/h2o.conf" ]
